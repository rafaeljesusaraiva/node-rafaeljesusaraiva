<style>
    form {
        width: 50vw;
        margin: 30px auto 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-content: center;
    }
    form > * {
        width: 100%;
        text-align: center;
    }
    form > input {
        margin-bottom: 20px;
    }
    form > input[type="submit"] {
        padding: 10px
    }
</style>

<div class="message alert alert-danger" style="display:none;"></div>
<form onsubmit="return false;">
    <div class="form-group"><label for="email">Email</label><input class="form-control email" type="email" name="email" aria-describedby="emailHelp" autocomplete="username" /><small class="form-text text-muted" id="emailHelp">We'll never share your email with anyone else.</small></div>
    <div class="form-group"><label for="password">Password</label><input class="form-control password" type="password" name="password" aria-describedby="passwordHelp" autocomplete="current-password" /><small class="form-text text-muted" id="passwordHelp">Password must be 8 characters or more.</small></div>
    <div class="form-group"><button class="submit btn btn-primary" type="button">Register</button></div>
    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>
</form>

<script>
    var submitBtn = document.getElementsByClassName('submit')[0];
    submitBtn.addEventListener('click', function() {
        fetch("/user/register", {
            method: "POST", 
            body: JSON.stringify({
                email: document.getElementsByClassName('email')[0].innerHTML,
                password: document.getElementsByClassName('password')[0].innerHTML
            })
        }).then(res => {
            if (res.status == 'error') {
                var message = document.getElementsByClassName('message')[0];
                message.innerHTML = res.message;;
                message.style.display = '';
            } else {
                window.alert('success - you should redirect your user');
            }
        });
    });
</script>